@model List<LayeredAppTemplate.UI.Models.UserViewModel>

<h2>Kullanıcılar</h2>

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Email</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>
                    <a href="@Url.Action("Edit", "User", new { id = user.Id })">Düzenle</a> |
                    <a href="@Url.Action("Delete", "User", new { id = user.Id })">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "User")">Yeni Kullanıcı Ekle</a>
